{
  "name": "nonflex",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "seed": "npm run seed --workspace server",
    "dev": "concurrently -n server,client -c auto \"npm:dev --workspace server\" \"npm:dev --workspace client\"",
    "dev:server": "npm run dev --workspace server",
    "dev:client": "npm run dev --workspace client",
    "build": "npm run build --workspace server && npm run build --workspace client",
    "start": "npm start --workspace server",
    "tunnel": "ngrok http 3000"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "ngrok": "^5.0.0-beta.2"
  }
}
